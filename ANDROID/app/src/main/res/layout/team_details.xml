<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b6574"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="RETURN"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintTop_toTopOf="@id/parent"
        android:background="@drawable/border_button"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameBar"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="@id/parent"
        app:layout_constraintBottom_toTopOf="@id/usersBar"
        >

        <TextView
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="NAME"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="dindons et dragons"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usersBar"
        app:layout_constraintTop_toBottomOf="@id/nameBar"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintBottom_toBottomOf="@id/parent"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginRight="8dp"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="USERS"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usersButton"
            android:text="LIST"
            android:textSize="20dp"
            android:background="@drawable/border_button"
            android:padding="15dp"
            />

        <TextView
            android:layout_width="20px"
            android:layout_height="20px"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>