<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b6574"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="RETURN"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintTop_toTopOf="@id/parent"
        android:background="@drawable/border_button"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameBar"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="@id/parent"
        app:layout_constraintBottom_toTopOf="@id/statusBar"
        >

        <TextView
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="NAME"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="dindons et dragons"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statusBar"
        app:layout_constraintTop_toBottomOf="@id/nameBar"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintBottom_toTopOf="@id/recupDateBar"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginRight="8dp"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="STATUS"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:text="décomposé"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="20px"
            android:layout_height="20px"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recupDateBar"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintLeft_toLeftOf="@id/parent"
        app:layout_constraintBottom_toTopOf="@id/stateBar"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginLeft="8dp"
        >

        <TextView
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECUP DATE"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recupDate"
            android:text="tomorrow"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stateBar"
        app:layout_constraintTop_toBottomOf="@id/recupDateBar"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintBottom_toTopOf="@id/originBar"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginRight="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATE"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/state"
            android:text="RAS"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="20px"
            android:layout_height="20px"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/originBar"
        app:layout_constraintTop_toBottomOf="@id/stateBar"
        app:layout_constraintLeft_toLeftOf="@id/parent"
        app:layout_constraintBottom_toTopOf="@id/cfDocBar"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginLeft="8dp"
        >

        <TextView
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORIGIN"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/origin"
            android:text="my ass"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cfDocBar"
        app:layout_constraintTop_toBottomOf="@id/originBar"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintBottom_toTopOf="@id/ableToBorrowBar"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginRight="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CF DOC"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cfDoc"
            android:text="rm rf *"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="20px"
            android:layout_height="20px"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ableToBorrowBar"
        app:layout_constraintLeft_toLeftOf="@id/parent"
        app:layout_constraintBottom_toBottomOf="@id/parent"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        >

        <TextView
            android:layout_width="20px"
            android:layout_height="20px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABLE TO BORROW"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ableToBorrow"
            android:text="RAS"
            android:textSize="20dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>