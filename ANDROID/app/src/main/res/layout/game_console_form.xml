<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b6574"
    android:id="@+id/parent"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="RETURN"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintTop_toTopOf="@id/parent"
        android:background="@drawable/border_button"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nbMaxController"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toTopOf="@id/powerCable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="number"
        android:hint="NB MAX PLAYER"
        android:backgroundTint="@android:color/holo_red_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/powerCable"
        app:layout_constraintTop_toBottomOf="@id/nbMaxController"
        app:layout_constraintBottom_toTopOf="@id/videoCable"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="text"
        android:hint="POWER CABLE"
        android:textSize="18dp"
        android:backgroundTint="@android:color/holo_red_dark"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/powerCableSpinner"
        app:layout_constraintTop_toBottomOf="@id/nbMaxController"
        app:layout_constraintBottom_toTopOf="@id/videoCable"
        app:layout_constraintLeft_toRightOf="@id/powerCable"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoCable"
        app:layout_constraintTop_toBottomOf="@id/powerCable"
        app:layout_constraintBottom_toTopOf="@id/realiseDate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="text"
        android:hint="VIDEO CABLE"
        android:textSize="18dp"
        android:backgroundTint="@android:color/holo_red_dark"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoCableSpinner"
        app:layout_constraintTop_toBottomOf="@id/powerCable"
        app:layout_constraintBottom_toTopOf="@id/realiseDate"
        app:layout_constraintLeft_toRightOf="@id/videoCable"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/realiseDate"
        app:layout_constraintTop_toBottomOf="@id/videoCable"
        app:layout_constraintBottom_toTopOf="@id/editor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="text"
        android:hint="REALISE DATE"
        android:textSize="18dp"
        android:backgroundTint="@android:color/holo_red_dark"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:id="@+id/realiseDateButton"
        app:layout_constraintTop_toBottomOf="@id/videoCable"
        app:layout_constraintBottom_toTopOf="@id/editor"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="text"
        android:background="@drawable/border_button"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_marginRight="4dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editor"
        app:layout_constraintTop_toBottomOf="@id/realiseDate"
        app:layout_constraintBottom_toTopOf="@id/submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="text"
        android:hint="EDITOR"
        android:backgroundTint="@android:color/holo_red_dark"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" SUBMIT"
        android:id="@+id/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_button"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>