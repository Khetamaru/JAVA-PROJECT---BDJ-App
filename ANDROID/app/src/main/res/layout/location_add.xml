<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b6574">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="RETURN"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintTop_toTopOf="@id/parent"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeText"
        android:hint="PLACE"
        app:layout_constraintTop_toTopOf="@id/parent"
        app:layout_constraintBottom_toTopOf="@+id/dateText"
        android:backgroundTint="@android:color/holo_red_dark"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateText"
        android:hint="CLICK HERE TO PICK THE DATE"
        app:layout_constraintTop_toBottomOf="@id/placeText"
        app:layout_constraintBottom_toTopOf="@+id/startTime"
        android:backgroundTint="@android:color/holo_red_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START TIME"
        app:layout_constraintLeft_toLeftOf="@id/startTime"
        app:layout_constraintBottom_toTopOf="@id/startTime"
        app:layout_constraintRight_toRightOf="@id/startTime"
        />

    <TimePicker
        android:layout_width="200dp"
        android:layout_height="50mm"
        android:id="@+id/startTime"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        app:layout_constraintLeft_toLeftOf="@id/parent"
        app:layout_constraintBottom_toTopOf="@id/validation"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="END TIME"
        app:layout_constraintLeft_toLeftOf="@id/endTime"
        app:layout_constraintBottom_toTopOf="@id/endTime"
        app:layout_constraintRight_toRightOf="@id/endTime"
        />

    <TimePicker
        android:layout_width="200dp"
        android:layout_height="50mm"
        android:id="@+id/endTime"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintBottom_toTopOf="@id/validation"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/validation"
        android:text="CREATE LOCATION"
        app:layout_constraintBottom_toBottomOf="@id/parent"
        app:layout_constraintLeft_toLeftOf="@id/parent"
        app:layout_constraintRight_toRightOf="@id/parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>